@media (max-width: 576px) {
    #highlight-slider .owl-item.active {
        width: 270px !important;
    }

    .post-title {
        font-size: 16px !important;
    }

    .post-content {
        font-size: 12px;
    }
}

@media (min-width: 768px) {
    /* .owl-carousel::before {
